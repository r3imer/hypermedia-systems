@inherits RazorSliceHttpResult<Contact>
<tr>
  <td>
    <input type="checkbox" name="selected_contact_ids" value="@Model.id"
           x-model="selected">
  </td>
  <td>@Model.first</td>
  <td>@Model.last</td>
  <td>@Model.phone</td>
  <td>@Model.email</td>
  <td>
    <div data-overflow-menu>
      <button type="button" aria-haspopup="menu"
              aria-controls="contact-menu-@Model.id">
        Options
      </button>
      <div role="menu" hidden id="contact-menu-@Model.id">
        <a role="menuitem" href="/contacts/@Model.id/edit">Edit</a>
        <a role="menuitem" href="/contacts/@Model.id">View</a>
        <a role="menuitem" href="#"
           hx-delete="/contacts/@Model.id"
           hx-confirm="Are you sure you want to delete this contact?"
           hx-swap="outerHTML swap:1s"
           hx-target="closest tr">Delete</a>
      </div>
    </div>
  </td>
</tr>
