@inherits RazorSliceHttpResult<ContactsRequest>

<form action="/contacts" method="get" class="tool-bar">
  <label for="search">Search Term</label>
  <input id="search" type="search" name="q" value="@Model.q" />
  <input type="submit" value="Search" />
</form>
<table>
  <thead>
    <tr>
      <th></th>
      <th>First</th>
      <th>Last</th>
      <th>Phone</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var contact in Model.contacts) {
      @await RenderPartialAsync("/slices/row", contact)
    }
  </tbody>
</table>
